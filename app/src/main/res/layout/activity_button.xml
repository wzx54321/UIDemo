<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.common.component_ui.widget.button.RoundButton
        android:id="@+id/btnFixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:padding="@dimen/dimen_10dp"
        android:text="指定圆角大小"
        app:borderColor="@color/cfdd835"
        app:borderWidth="2dp"
        app:radius="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.component_ui.widget.button.RoundButton
        android:id="@+id/btnGradient"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="渐变色"
        app:borderColor="@color/cfdd835"
        app:borderWidth="2dp"
        app:gradientEnd="@color/colorAccent"
        app:gradientStart="@color/cfdd835"
        app:radius="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFixed" />

    <com.common.component_ui.widget.button.RoundButton
        android:id="@+id/btnTopLeft"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="指"
        app:borderColor="@color/cfdd835"
        app:borderWidth="2dp"
        app:radiusTopLeft="@dimen/dimen_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGradient" />

    <com.common.component_ui.widget.button.RoundButton
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="定"
        app:borderColor="@color/cfdd835"
        app:borderWidth="2dp"
        app:radiusTopRight="@dimen/dimen_5dp"
        app:layout_constraintStart_toEndOf="@+id/btnTopLeft"
        app:layout_constraintTop_toTopOf="@+id/btnTopLeft" />

    <com.common.component_ui.widget.button.RoundButton
        android:id="@+id/btnBottomLeft"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="方"
        app:borderColor="@color/cfdd835"
        app:borderWidth="2dp"
        app:radiusBottomLeft="@dimen/dimen_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTopLeft" />

    <com.common.component_ui.widget.button.RoundButton
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="向"
        app:borderColor="@color/cfdd835"
        app:borderWidth="2dp"
        app:radiusBottomRight="@dimen/dimen_5dp"
        app:layout_constraintStart_toEndOf="@+id/btnBottomLeft"
        app:layout_constraintTop_toTopOf="@+id/btnBottomLeft" />


</androidx.constraintlayout.widget.ConstraintLayout>