<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.common.componentui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.common.component_ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.common.component_ui.view.ToastActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name="com.common.component_ui.view.ButtonActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name="com.common.component_ui.view.AnimActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop"
            android:theme="@style/AnimActivity" />
        <activity
            android:name="com.common.component_ui.view.AspectRationImageActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name="com.common.component_ui.view.DialogActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop" />
        <activity
            android:name="com.common.component_ui.view.BottomSheetActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop" />
    </application>

</manifest>